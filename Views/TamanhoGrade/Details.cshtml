<div class="container">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="tamanhoGradeModalLabel">Detalhes dos Tamanhos/Grade</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label asp-for="tamanho" class="form-label">Cód. Tamanho</label>
            <input asp-for="tamanho.Id" type="text" class="form-control" readonly>
          </div>

          <div class="mb-3">
            <label asp-for="tamanho" class="form-label">Tamanho</label>
            <input asp-for="tamanho.DsTamanho" type="text" class="form-control" readonly>
          </div>
          <div class="mb-3">
            <label asp-for="gradeTamanho" class="form-label">Cód. Grade</label>
            <input asp-for="gradeTamanho.Id" type="text" class="form-control" readonly>
          </div>

        </div>
        <div class="modal-footer">
          <a 
            type="button" 
            class="btn btn-primary" 
            asp-controller="TamanhoGrade"
            asp-action="Edit" 
            asp-route-id="@Model.tamanho.Id, @Model.gradeTamanho.Id"
            >
            Editar
          </a>
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
        </div>
      </div>
    </div>
</div>