<div class="container">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h1 class="modal-title fs-5" id="produtoModalLabel">Detalhes do Produto: @Model.DsProduto</h1>
          <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
        </div>
        <div class="modal-body">
          <div class="mb-3">
            <label asp-for="Id" class="form-label">Código</label>
            <input asp-for="Id" type="text" class="form-control" readonly>
          </div>

          <div class="mb-3">
            <label asp-for="DsProduto" class="form-label">Produto</label>
            <input asp-for="DsProduto" type="text" class="form-control" readonly>
          </div>

          <div class="mb-3">
            <label asp-for="Ncm" class="form-label">NCM</label>
            <input asp-for="Ncm" type="text" class="form-control" readonly>
          </div>

          <div class="mb-3">
            <label asp-for="Und" class="form-label">UND</label>
            <input asp-for="Und" type="text" class="form-control" readonly>
          </div>

          <div class="mb-3">
            <label asp-for="gradeCor" class="form-label">Grade de Cores</label>
            <input asp-for="gradeCor.Id" type="text" class="form-control" readonly>
          </div>

          <div class="mb-3">
            <label asp-for="gradeTamanho" class="form-label">Grade de Tamanhos</label>
            <input asp-for="gradeTamanho.Id" type="text" class="form-control" readonly>
          </div>

          <div class="mb-3">
            <label asp-for="DataCadastro" class="form-label">Data de Cadastro</label>
            <input asp-for="DataCadastro" type="text" class="form-control" readonly>
          </div>

          <div class="mb-3">
            <label asp-for="DataUltAlteracao" class="form-label">Data da Última Alteração</label>
            <input asp-for="DataUltAlteracao" type="text" class="form-control" readonly>
          </div>
        </div>
        <div class="modal-footer">
          <a 
            type="button" 
            class="btn btn-primary" 
            asp-controller="Produto"
            asp-action="Edit" 
            asp-route-id="@Model.Id"
            >
            Editar
          </a>
          <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Fechar</button>
        </div>
      </div>
    </div>
</div>